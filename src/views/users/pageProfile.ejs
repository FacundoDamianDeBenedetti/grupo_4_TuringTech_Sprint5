<!DOCTYPE html>
<html lang="es">
  <head>
    <%- include("../partials/head.ejs") %>
  </head>
  <body>
    <main>
      <%- include("../partials/header.ejs") %>

      <div class="contenedorPadre">
        <div class="main__container-avatars">
          <div class="main__bluebox">
            <img
              src="images/productAdd-assets/file-image-solid.svg"
              alt="avatar-registro"
              id="main__register-avatar"
            />
          </div>
          <div class="main__register">
            <input
              type="file"
              name="productImage1"
              id="productImage1"
              placeholder="Foto producto"
              class="main__register-avatar"
              oninvalid="this.setCustomValidity(' ')"
            />
          </div>
        </div>
        <div id="main-datos">
          <div class="containerDatosPersonales">
            <form action="#" method="POST">
              <h2>Datos Personales</h2>

              <label class="label-datosPersonales" for="ID">*ID cliente:</label>
              <input
                class="input-datosPersonales"
                type="text"
                placeholder="ID cliente"
                id="ID"
              />

              <label class="label-datosPersonales" for="correo"
                >*Correo Electronico:</label
              >
              <input
                class="input-datosPersonales"
                type="email"
                placeholder="email"
                id="correo"
              />

              <label class="label-datosPersonales" for="name"
                >*Nombre y Apellido:</label
              >
              <input
                class="input-datosPersonales"
                type="text"
                placeholder="Nombre y Apellido"
                id="name"
              />

              <label class="label-datosPersonales" for="dni">*DNI:</label>
              <input
                class="input-datosPersonales"
                type="number"
                placeholder="DNI"
                id="dni"
                maxlength="8"
              />

              <label class="label-datosPersonales" for="codigo"
                >*Telefono:</label
              >
              <input
                class="input-datosPersonales"
                type="text"
                placeholder="C. Area"
                id="codigo"
              />
            </form>
          </div>

          <div class="containerFacturacion">
            <form action="#" method="POST">
              <h2>Domicilio de facturación</h2>
              <label class="label-direccionFiscal" for="direccion"
                >*Direccion fiscal:</label
              >
              <input
                class="input-fiscal"
                type="text"
                placeholder="Dirección"
                id="direccion"
              />

              <label class="label-direccionFiscal" for="piso"
                >*Piso/Depto:</label
              >
              <input
                class="input-fiscal"
                type="text"
                placeholder="Piso/Depto"
                id="piso"
              />

              <label class="label-direccionFiscal" for="CP"
                >*Código Postal:</label
              >
              <input
                class="input-fiscal"
                type="text"
                placeholder="Codigo Postal"
                id="CP"
              />

              <label class="label-direccionFiscal" for="localidad"
                >*Localidad:</label
              >
              <input
                class="input-fiscal"
                type="text"
                placeholder="Localidad"
                id="localidad"
              />

              <label class="label-direccionFiscal" for="provincia"
                >*Provincia:</label
              >
              <input
                class="input-fiscal"
                type="text"
                placeholder="Provincia"
                id="provincia"
              />
            </form>
          </div>
          <button class="boton-iniciar">Guardar Datos</button>
        </div>
      </div>

      <%-include("../partials/footer.ejs") %>
    </main>
  </body>
</html>
